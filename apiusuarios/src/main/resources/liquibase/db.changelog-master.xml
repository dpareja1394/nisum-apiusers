<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="202302030326" author="Daniel Pareja">
        <createTable tableName="user">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" primaryKeyName="user_pk" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="datetime"/>
            <column name="last_login" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="phone">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" primaryKeyName="phone_pk" nullable="false"/>
            </column>
            <column name="user_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="city_code" type="varchar(4)">
                <constraints nullable="false"/>
            </column>
            <column name="country_code" type="varchar(4)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="phone" baseColumnNames="user_id" constraintName="phone_user_fk"
                                 referencedTableName="user" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>